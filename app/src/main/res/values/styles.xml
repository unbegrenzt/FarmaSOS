<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/primary1</item>
        <item name="colorPrimaryDark">@color/primary_dark1</item>
        <item name="colorAccent">@color/accent1</item>
        <item name="android:colorForeground">@color/primary_dark1</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondaryInverse">@color/dark</item>
        <item name="android:textColorSecondary">@color/dark</item>
        <item name="android:colorBackground">@color/icons1</item>
        <item name="android:textColorPrimaryInverse">@color/dark</item>
        <item name="android:windowBackground">?android:attr/colorBackground</item>
        <item name="android:alertDialogTheme">@style/YourAlertDialogTheme</item>

    </style>

    <style name="YourAlertDialogTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
        <item name="android:textColor">#bcb8b8</item>
    </style>

    <style name="Theme_Dialog" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Base.ThemeOverlay.AppCompat.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

</resources>
