<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/primary1</item>
        <item name="colorPrimaryDark">@color/primary_dark1</item>
        <item name="colorAccent">@color/accent1</item>
        <item name="android:colorForeground">@color/primary_dark1</item>
        <item name="android:textColorPrimary">@color/icons1</item>
        <item name="android:textColorSecondaryInverse">@color/divider1</item>
        <item name="android:textColorSecondary">@color/secondary_text1</item>
        <item name="android:colorBackground">@color/icons1</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text1</item>
        <item name="android:windowBackground">?android:attr/colorBackground</item>

    </style>

    <style name="Theme_Dialog" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Base.ThemeOverlay.AppCompat.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

</resources>
