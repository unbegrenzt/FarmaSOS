    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:text="@string/hola_de_nuevo"
            android:textColor="@color/color_de_texto"
            android:textSize="@dimen/texto_headline_2"
            android:layout_centerHorizontal="true"
            android:id="@+id/txt1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="@dimen/margen_izq"
            android:layout_below="@+id/txt1"
            android:text="@string/iniciar_sesion_usando"
            android:textColor="@color/color_de_texto"
            android:textSize="@dimen/texto_subhead1_3A"
            android:id="@+id/txt2"/>

            <LinearLayout
                android:layout_below="@+id/txt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/lln"
                android:layout_marginLeft="@dimen/margen_izq"
                android:layout_marginRight="@dimen/margen_izq"
                android:weightSum="2.2">


                <com.facebook.login.widget.LoginButton
                    android:id="@+id/facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"/>

                <android.support.v7.widget.AppCompatButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/atenuante"
                    android:id="@+id/google"
                    android:textSize="@dimen/texto_subhead2_3B"
                    android:text="@string/google"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/lln"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:id="@+id/lln2"
                android:layout_marginLeft="@dimen/margen_izq"
                android:layout_marginRight="@dimen/margen_izq"
                android:weightSum="2.2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/or"
                    android:textAlignment="center"
                    android:layout_weight="0.2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>


            </LinearLayout>


        <!-- Email Label -->
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_emailtodo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lln2"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/margen_izq"
            android:layout_marginRight="@dimen/margen_izq">

            <EditText android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="@string/email" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_contra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/input_emailtodo"
            android:layout_marginLeft="@dimen/margen_izq"
            android:layout_marginRight="@dimen/margen_izq">

            <EditText android:id="@+id/input_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="@string/password"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
            android:layout_below="@+id/input_contra"
            android:id="@+id/btn_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ripple_effect"
            android:textColor="@color/color_de_texto"
            android:text="@string/login"
            android:textSize="@dimen/texto_subhead2_3B"
            android:layout_marginLeft="@dimen/margen_izq"
            android:layout_marginRight="@dimen/margen_izq"/>

        <TextView
            android:id="@+id/link_passreset"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/olvid_su_contrase_a"
            android:layout_below="@+id/btn_login"
            android:gravity="center"
            android:textColor="@color/color_de_texto"
            android:textSize="@dimen/texto_subhead2_3B"
            android:layout_marginLeft="@dimen/margen_izq"
            android:layout_marginRight="@dimen/margen_izq"/>

        <TextView
            android:layout_below="@+id/link_passreset"
            android:id="@+id/link_signupty"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="@dimen/margen_izq"
            android:layout_marginRight="@dimen/margen_izq"
            android:text="@string/no_account_yet_create_one"
            android:gravity="center"
            android:textColor="@color/color_de_texto"
            android:textSize="@dimen/texto_subhead2_3B" />

        <android.support.v7.widget.AppCompatButton
            android:layout_below="@+id/link_signupty"
            android:id="@+id/link_signup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ripple_effect_second"
            android:textColor="@color/color_de_texto"
            android:text="@string/crear_cuenta"
            android:textSize="@dimen/texto_subhead2_3B"
            android:layout_marginLeft="@dimen/margen_izq"
            android:layout_marginRight="@dimen/margen_izq"/>

    </RelativeLayout>