<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:elevation="@dimen/cardview_default_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <ImageView
            android:id="@+id/photofarma"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/placeholderblack" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:layout_marginTop="2dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_toEndOf="@+id/photofarma"
            android:layout_toRightOf="@+id/photofarma"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/FarmName"
                android:maxLines="1"
                android:text="Google Inc."
                android:textColor="@color/color_no_seleccion"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Caption"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/turno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:drawablePadding="2dp"
                android:drawableRight="@drawable/ic_star"
                android:gravity="center"
                android:text="Abierto"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/color_no_seleccion"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>